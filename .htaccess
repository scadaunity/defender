Options -Indexes

<FilesMatch "\.env$">
    Deny from all
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine on
    #RewriteCond %{REQUEST_URI} !^public
    #RewriteRule ^(.*)$ public/$1 [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/index.php/$1 [L,QSA]
</IfModule>
